<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Преобразование типа поля role -->
    <changeSet id="57" author="AndrewsS">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="users_table"/>
            <columnExists schemaName="search_engine" tableName="users_table" columnName="role"/>
        </preConditions>
        <modifyDataType columnName="role" newDataType="enum('ROLE_USER','ROLE_ADMIN')" tableName="users_table"/>
    </changeSet>

    <!-- Добавление недостающих столбцов -->
    <changeSet id="58" author="AndrewsS">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="users_table"/>
        </preConditions>
        <addColumn tableName="users_table">
            <column name="account_non_expired" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="users_table">
            <column name="account_non_locked" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="users_table">
            <column name="credentials_non_expired" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="users_table">
            <column name="last_password_reset_date" type="datetime" />
        </addColumn>
    </changeSet>

</databaseChangeLog>